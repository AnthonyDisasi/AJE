@model Classe

<form asp-area="Prefet" asp-controller="Classe" asp-action="Delete" asp-route-idPrefet="@ViewBag.idPrefet" asp-route-id="@Model.ClasseID" method="post">
    <table border="0">
        <tr>
            <td class="right">
                <label asp-for="Niveau"></label>
            </td>
            <td>@Model.Niveau</td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="@Model.Section"></label>
            </td>
            <td>@Model.Section</td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="Option"></label>
            </td>
            <td>@Model.Option</td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">Supprimer</button>
            </td>
        </tr>
    </table>
</form>

<a asp-area="Prefet" asp-controller="Classe" asp-action="Index" asp-route-id="@ViewBag.PrefetID">Retour à  la liste des classes </a>